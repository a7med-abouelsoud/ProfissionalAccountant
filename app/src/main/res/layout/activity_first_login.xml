<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.FirstLogin"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome - مرحبا"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:id="@+id/welcomdtxt"
        android:textStyle="bold"
        android:fontFamily="@font/cairoblack"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/welcomdtxt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/applogo" />
</RelativeLayout>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_margin="10dp"
      android:layout_height="0dp"
      android:layout_weight="2">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/langarabicTxt"
          android:fontFamily="@font/cairoblack"
          android:text="يرجى اختيار لغتك المفضلة:"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:textDirection="rtl"
          />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/langenTxt"

          android:layout_below="@+id/langarabicTxt"
          android:fontFamily="@font/cairoblack"
          android:text="please select your preffered language:"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:layout_marginTop="10dp"
          android:textDirection="ltr"
          />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/arablangbtn"
          android:layout_below="@id/langenTxt"
          android:layout_marginTop="10dp"
          android:textSize="20sp"
          android:layout_margin="10dp"
          android:background="@color/newMent"
          android:fontFamily="@font/cairoblack"
          android:text="العربية"/>
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/englangbtn"
          android:layout_below="@id/arablangbtn"
          android:layout_marginTop="10dp"
          android:textSize="20sp"
          android:layout_margin="10dp"
          android:background="@color/orange"
          android:fontFamily="@font/cairoblack"
          android:text="English"/>
  </RelativeLayout>

</LinearLayout>