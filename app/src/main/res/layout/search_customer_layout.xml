<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/newoff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/newOrange"
            android:padding="4dp">
            <Button
                android:id="@+id/addNewInvoice"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:padding="0dp"
                android:drawableStart="@drawable/addbutton"
                android:drawablePadding="4dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/newahmed"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:text="@string/newinvoice"
                android:layout_alignParentEnd="true"/>


            <Button
                android:id="@+id/EditCustomerData"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:padding="0dp"
                android:drawableStart="@drawable/edit"
                android:drawablePadding="4dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/newahmed"
                android:textSize="15sp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/addNewInvoice"
                android:textAllCaps="false"
                android:text="@string/editclient"
              />

        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtname"

        android:textSize="20sp"
        android:textColor="@color/darkRed"
        android:layout_centerVertical="true"
        android:text="@string/Name"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customerName"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="20sp"

        android:layout_toEndOf="@+id/txtname"
        android:layout_marginStart="10dp"/>


</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttax"
        android:textSize="20sp"
        android:textColor="@color/darkRed"
        android:text="@string/tax"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CustomerTax"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/txttax"
        android:layout_marginStart="10dp"/>


</RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtsegl"
                android:textSize="20sp"
                android:textColor="@color/darkRed"
                android:text="@string/register"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CustomerSegel"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_toEndOf="@+id/txtsegl"
                android:layout_marginStart="10dp"/>


        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>